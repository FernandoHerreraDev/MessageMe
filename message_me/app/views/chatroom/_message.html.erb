
  <div class="ui feed">
    <div class="event">
      <div class="label">
      <%= image_tag "fernando.jpg" %>  
      </div>
      <div class="content">
        <div class="date">
        <%= time_ago_in_words(message.created_at) %>
        </div>
        <div class="summary">
          <em> <%= message.user.username %></em>
        </div>
        <div class="extra text">
          <%= message.body %>
        </div>
      </div>
    </div>
    <div class="ui divider"></div>
  </div>
  